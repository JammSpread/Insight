{
	"author": {
		"name": "Tyler McGinn",
		"email": "systematyler@gmail.com"
	},
	"name": "academy",
	"displayName": "Academy",
	"description": "VS Code extension for quick access and smart queries of learning resources such as Google,Stackoverflow,Youtube and W3 Schools.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.34.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*",
		"onView:Extension.customSearch",
		"onView:Extension.search"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "Extension.search",
				"title": "Search"
			},
			{
				"command": "Extension.customSearch",
				"title": "Custom Search",
				"icon":{
					"dark": "Icons/search.svg",
					"light": "Icons/search.svg"
				}
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "Menu",
					"title": "Academy",
					"icon": "Icons/40x40_brain.png"
				}
			]
		},
		"views": {
			"Menu":[
				{
					"id": "Menu",
					"name": "Resources"
				}
			]
		},
		"menus": {
			"view/item/context": [
				{
					"command": "Extension.customSearch",
					"when": "view == Menu && viewItem == MenuItem",
					"group": "inline"
				}
			]
		}
	
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	}
}
