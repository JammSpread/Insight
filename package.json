{
	"name": "academy",
	"displayName": "Academy",
	"description": "VS Code extension for quick access and smart queries of learning resources such as Stackoverflow,Youtube and W3 Schools.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.34.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*",
		"onView:Extension.goToSite"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "Extension.goToSite",
				"title": "Go"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "AcademyMenu",
					"title": "Academy",
					"icon": "Icons/40x40_brain.png"
				}
			]
		},
		"views": {
			"AcademyMenu":[{
				"id": "AcademyMenu",
				"name": "Main"
			}]
		},
		"menus": {
			"view/title": [
				{
					"command": "Extension.goToSite",
					"when": "view == AcademyMenu"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	}
}
